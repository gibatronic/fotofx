{
    "name": "fotofx",
    "description": "Create videos using effects to animate still images with ffmpeg",
    "author": "Gibran Malheiros <gibatronic@gmail.com>",
    "license": "MIT",
    "version": "0.1.0",
    "bin": "./source/main",
    "devDependencies": {
        "shellcheck": "^1.1.0"
    },
    "keywords": [
        "image",
        "photo",
        "video",
        "effect",
        "pan",
        "zoom",
        "slide",
        "ffmpeg"
    ],
    "os": [
        "!win32"
    ],
    "scripts": {
        "lint": "shellcheck source/*",
        "test:image": "./source/main --duration 5 --effect slide-left --ease in-out-sine --image test/test-image.jpg --video test/test-video.mp4 -q --width 1080 --height 1920"
    }
}
